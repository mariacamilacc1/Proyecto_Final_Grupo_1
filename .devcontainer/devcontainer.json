{

// Define la imagen base de Docker que contiene Python.

// Aquí se especifica que use la versión 3.9 de Python.

"image": "mcr.microsoft.com/devcontainers/python:3.9",


// Configura VS Code para usar la extensión de Python

"customizations": {
  "vscode": {
    "extensions": [
      "ms-python.python",
      "ms-python.vscode-pylance"

    ]

  }

},


// (Opcional) Instala cualquier dependencia inicial (ej. NumPy, Pandas)

"postCreateCommand": "pip install --upgrade pip"

}
